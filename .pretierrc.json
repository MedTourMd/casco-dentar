{
    "semi": false,
    "plugins": ["prettier-plugin-tailwindcss"],
    "useTabs": false,
    "printWidth": 110,
    "tabWidth": 4,
    "singleQuote": false,
    "trailingComma": "all",
    "experimentalTernaries": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "src/**/*.html",
            "options": {
                "parser": "angular",
                "editorconfig": true
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "tabWidth": 4,
                "editorconfig": true
            }
        },
        {
            "files": "*.ts",
            "options": {
                "editorconfig": true
            }
        }
    ]
}
